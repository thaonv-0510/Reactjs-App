{
  "compilerOptions": {
    "baseUrl": "./app",
    "paths": {
      "@src/*": [
        "./javascript/src/*"
      ],
      "@tests/*": [
        "./javascript/tests/*"
      ],
      "*": [
        "*"
      ]
    },
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": true
}
